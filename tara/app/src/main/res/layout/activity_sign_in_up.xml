            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_light"
                android:text="Shop Name*"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/OwnerSignup_shopnameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/poppins_light"
                android:hint="Your Shop Name"
                android:inputType="text"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="Contact*"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/Ownersignup_phnId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/poppins_light"
                android:hint="+880"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="Owners Name"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/OwnerNameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/poppins_light"
                android:hint="Your Name"
                android:inputType="text"
                android:lines="1"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="Facebook Page Url*"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/FabpageUrlId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:fontFamily="@font/poppins_light"
                android:hint="Facebook page Url"
                android:lines="1"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

