<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="10dp"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/msgTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="New Offer"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_inbox"/>

        <TextView
            android:id="@+id/msgBodyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msgTitleId"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/open_sans"
            android:text="Lorem ipsum dolor sit amet, consectetur adipi scing elit. Vivamus eget rhoncus lectus."
            android:textSize="12sp" />

        <TextView
            android:id="@+id/inboxOrderDateId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/msgBodyId"
            android:text="Date"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>