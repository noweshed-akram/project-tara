<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Activities.AddArchiveVideos">

    <ImageButton
        android:id="@+id/btnArchBackId"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@color/transparent"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_back"
        android:tint="@color/black" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_archive"
        android:tint="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Add Archive Videos"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/poppins"
        android:text="Title*"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/ArchvideoTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_bg"
        android:fontFamily="@font/poppins_light"
        android:hint="set a title"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="Url*"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/ArchvideoUrl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_bg"
        android:fontFamily="@font/poppins_light"
        android:hint="paste your video url"
        android:paddingStart="15dp"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ArchvideoDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_bg"
            android:drawableRight="@drawable/ic_calender"
            android:drawableTint="@color/ash"
            android:fontFamily="@font/poppins_light"
            android:hint="Select Date"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/datePickerId"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@color/transparent" />

    </RelativeLayout>

    <Button
        android:id="@+id/ArchVideoupId"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/livebtn_bg"
        android:fontFamily="@font/poppins_bold"
        android:text="Upload"
        android:textColor="@color/white" />


</LinearLayout>