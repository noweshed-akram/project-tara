<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="150dp"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="1dp"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    app:cardCornerRadius="10dp">

    <WebView
        android:id="@+id/popularVideosId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/popularVideoThumbId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/popArchiveViewsId"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:background="@drawable/livebtn_bg"
        android:backgroundTint="@color/ash"
        android:drawableStart="@drawable/ic_eyeview"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:textAlignment="center"
        android:paddingStart="5dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popularVideosTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:text="Video Title"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/popularVideosDateId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="15 Sept 2019"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/popularVideosUrlId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Video Title"
        android:textSize="12sp"
        android:visibility="gone" />

</android.support.v7.widget.CardView>
